{
    "name": "php-optimizer/saas",
    "description": "SAAS pour l'analyse et l'optimisation de code PHP selon les PSR et PHP 8.4",
    "type": "project",
    "require": {
        "php": "^8.2",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpstan/phpstan": "^1.12",
        "squizlabs/php_codesniffer": "^3.8",
        "phpmd/phpmd": "^2.15",
        "twig/twig": "^3.8",
        "monolog/monolog": "^3.5",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^11.0",
        "rector/rector": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "PhpOptimizer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpOptimizer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "serve": "php -S localhost:8000 -t public",
        "test": "phpunit",
        "cs-fix": "php-cs-fixer fix",
        "stan": "phpstan analyse"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
